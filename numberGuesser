# pour importer le module random
import random
# pour créer un nombre aléatoire entre 1 et 100
n = random.randrange(1, 100)
# pour demander à l'utilisateur d'entrer un nombre
guess = int(input("Entrez un nombre : "))
while n != guess:  # signifie que si n est différent de la supposition (guess)
    # si la supposition est inférieure à n
    if guess < n:
        print("Trop bas")
        # redemander une nouvelle entrée
        guess = int(input("Entrez un autre nombre : "))
    # si la supposition est supérieure à n
    elif guess > n:
        print("Trop haut !")
        # redemander une nouvelle entrée
        guess = int(input("Entrez un autre nombre : "))
    # si la supposition est égale à n, sortir de la boucle
    else:
        break
print("Bravo, vous avez deviné le bon nombre !")
